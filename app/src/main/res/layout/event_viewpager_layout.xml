                android:layout_marginTop="5dp"

                app:layout_constraintTop_toBottomOf="@id/view3"
                android:src="@drawable/ic_baseline_pin_drop_24"
                app:layout_constraintStart_toEndOf="@id/t3"
                app:layout_constraintEnd_toStartOf="@id/t5"
                />

            <TextView
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="@id/t4"
                app:layout_constraintEnd_toEndOf="@id/t4"
                app:layout_constraintTop_toBottomOf="@id/t4"/>

            <ImageView
                android:id="@+id/t5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginTop="5dp"

                app:layout_constraintTop_toBottomOf="@id/view3"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintStart_toEndOf="@id/t4"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
