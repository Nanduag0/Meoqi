<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/artist_photo_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"


        android:src="@drawable/demo_profile_photo"/>

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artist_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#33696565"
        android:text="Jubin"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator"/>

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" | "
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintEnd_toStartOf="@+id/age"
        app:layout_constraintStart_toEndOf="@id/artist_name_detail"
        />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27"
        android:layout_marginBottom="10dp"

        android:textSize="20sp"

        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@id/separator"
        app:layout_constraintEnd_toStartOf="@+id/calender_icon"
        app:layout_constraintTop_toTopOf="@id/separator"
        />

    <ImageView
        android:id="@+id/calender_icon"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"

        android:src="@drawable/ic_baseline_calendar_today_24"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@id/age"
        app:layout_constraintEnd_toStartOf="@+id/calender_count"
        app:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/calender_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/calender_icon"
        app:layout_constraintEnd_toStartOf="@+id/reward_icon"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@id/calender_icon"
        />

    <ImageView
        android:id="@+id/reward_icon"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"

        android:src="@drawable/ic_baseline_fastfood_24"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@id/calender_count"
        app:layout_constraintEnd_toStartOf="@+id/reward_count"
        app:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/reward_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57"
        android:layout_marginBottom="10dp"

        android:textSize="20sp"

        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/group"
        app:layout_constraintTop_toTopOf="@id/reward_icon"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@id/reward_icon"
        />




    <ImageView
        android:id="@+id/group"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_baseline_group_24"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@id/reward_count"
        app:layout_constraintEnd_toStartOf="@+id/follower"
        app:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="23"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/group"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_round_card"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Me..."
            android:textStyle="bold" />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hey!"
            app:colorClickableText="@color/colorGreen"
            app:trimCollapsedText="more"
            app:trimExpandedText="less" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Top Artists"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBlack" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>