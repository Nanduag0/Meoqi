<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#17171A"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/i1_card"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        >
        <ImageView
            android:id="@+id/i1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/demo_profile_photo"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        app:layout_constraintTop_toTopOf="@id/i1_card"
        app:layout_constraintStart_toEndOf="@id/i1_card"
        android:layout_marginTop="10dp"
        android:text="Name of user"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="20dp"
        />

    <RatingBar
        android:id="@+id/rat"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#FFC107"
        android:numStars="5"
        android:rating="4"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintStart_toStartOf="@id/t1"/>

    <TextView
        android:id="@+id/tt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:text="You will get an update within...."
        app:layout_constraintTop_toBottomOf="@+id/rat"
        app:layout_constraintStart_toStartOf="@id/t1"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        android:backgroundTint="@color/colorOrange"
        android:background="@drawable/card_bg"
        android:padding="2dp"
        app:tint="@color/colorBlack"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/t1"
        app:layout_constraintBottom_toBottomOf="@id/tt2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.04dp"
        android:background="#41999494"
        app:layout_constraintTop_toBottomOf="@id/i1_card"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>