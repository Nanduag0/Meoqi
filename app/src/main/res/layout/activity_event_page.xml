<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EventPage">
    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="40dp"
        android:layout_gravity="center|top"
        android:layout_alignTop="@+id/recycler_view_ass"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#201F1F"
        android:visibility="gone"
        >

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:backgroundTint="#fff"
            android:padding="4dp"
            android:elevation="5dp"
            android:layout_margin="5dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="70dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/event_photo2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/event_image"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv1"

                android:background="@drawable/card_bg_1"

                android:layout_marginTop="250dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/card_bg"
                    android:backgroundTint="#252525"
                    android:padding="10dp"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/i1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@color/colorWhite"
                        android:clipToPadding="true"
                        android:clipChildren="true"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            >
                            <ImageView
                                android:id="@+id/pic"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/demo_profile_photo"
                                android:scaleType="centerCrop"
                                />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steven Steve "
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@id/i1"
                        app:layout_constraintTop_toTopOf="@id/i1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:id="@+id/username1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@steves "
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/i1"
                        app:layout_constraintTop_toBottomOf="@id/tv1"
                        android:layout_marginStart="10dp"/>

<!--                    <ImageView-->
<!--                        android:id="@+id/month"-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_margin="20dp"-->
<!--                        android:gravity="center"-->
<!--                        android:padding="1dp"-->
<!--                        android:text="JAN"-->
<!--                        android:src="@drawable/ic_event_date"-->
<!--                        android:textColor="@color/colorWhite"-->
<!--                        android:textStyle="bold"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent" />-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/month"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/text_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/month_bg"
                            android:elevation="3dp"
                            android:text="NOV"
                            android:padding="3dp"
                            android:textColor="@color/colorWhite"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="#222227"
                            >
                            <TextView
                                android:id="@+id/text_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:textAlignment="center"
                                android:text="27"
                                android:textSize="12sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="@id/month"
                        app:layout_constraintStart_toStartOf="@+id/month"

                        app:layout_constraintTop_toBottomOf="@id/month" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorWhite"
                        app:layout_constraintTop_toBottomOf="@id/i1"
                        android:layout_margin="15dp"/>

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supporting Artists"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"

                        app:layout_constraintTop_toBottomOf="@id/v1"
                        app:layout_constraintStart_toStartOf="@id/v1"/>

                    <androidx.recyclerview.widget.RecyclerView
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:itemCount="4"
                        android:id="@+id/rv1"
                        tools:listitem="@layout/item_friends_rv"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"


                        app:layout_constraintStart_toStartOf="@id/v1"
                        app:layout_constraintEnd_toEndOf="@id/v1"
                        app:layout_constraintTop_toBottomOf="@id/tv4"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv2"
                android:text="Meoqi presents Demo text This is the first and most commonly used option to make Horizontal RecyclerView. LinearLayoutManager provides a constructor that we can change the orientation of RecyclerView."
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/cv1"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="@id/cv1"
                android:layout_margin="20dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                android:fillViewport="true"
                android:id="@+id/con1_sv"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/con1"
                    android:layout_height="wrap_content">


<!--                    <ImageView-->
<!--                        android:id="@+id/calender_card_view"-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:src="@drawable/ic_event_date"-->
<!--                        app:layout_constraintEnd_toStartOf="@+id/ticket_card_view"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        />-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/calender_card_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:layout_constraintEnd_toStartOf="@+id/ticket_card_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/text_month1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/month_bg"
                            android:elevation="3dp"
                            android:text="NOV"
                            android:padding="3dp"
                            android:textColor="@color/colorWhite"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="#222227"
                            >
                            <TextView
                                android:id="@+id/text_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:textAlignment="center"
                                android:text="27"
                                android:textSize="12sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/calender_card_view"
                        android:text="Date"
                        android:textSize="12sp"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="@id/calender_card_view"
                        app:layout_constraintEnd_toEndOf="@id/calender_card_view"/>

                    <ImageView
                        android:id="@+id/ticket_card_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_ticket"
                        app:layout_constraintEnd_toStartOf="@id/iv3"
                        app:layout_constraintStart_toEndOf="@+id/calender_card_view"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/ticket_card_view"
                        android:text="Tickets"
                        android:textSize="12sp"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="@id/ticket_card_view"
                        app:layout_constraintEnd_toEndOf="@id/ticket_card_view"/>

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_guest_list"
                        app:layout_constraintEnd_toStartOf="@id/music_card_view"
                        app:layout_constraintStart_toEndOf="@+id/ticket_card_view"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/iv3"
                        android:text="Guest List"
                        android:textSize="12sp"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="@id/iv3"
                        app:layout_constraintEnd_toEndOf="@id/iv3"/>

                    <ImageView
                        android:id="@+id/music_card_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_location"
                        app:layout_constraintEnd_toStartOf="@id/share_card_view"
                        app:layout_constraintStart_toEndOf="@+id/iv3"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/music_card_view"
                        android:text="Location"
                        android:textSize="12sp"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="@id/music_card_view"
                        app:layout_constraintEnd_toEndOf="@id/music_card_view"/>

                    <ImageView
                        android:id="@+id/share_card_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_share"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/music_card_view"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/share_card_view"
                        android:text="Share"
                        android:textSize="12sp"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintStart_toStartOf="@id/share_card_view"
                        app:layout_constraintEnd_toEndOf="@id/share_card_view"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/view_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="View more"
                android:gravity="center"
                android:background="@drawable/card_bg"
                android:backgroundTint="#40A93814"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="6dp"
                android:paddingStart="10dp"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:drawableTint="#F44336"
                app:layout_constraintTop_toBottomOf="@+id/con1_sv"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv2"
        app:layout_constraintVertical_bias="1"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:background="@drawable/bottom_nav_bg"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@drawable/icon_color"
        app:itemTextColor="@drawable/icon_color"
        app:labelVisibilityMode="unlabeled"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>