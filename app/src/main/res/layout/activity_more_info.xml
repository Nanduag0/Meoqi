<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.MoreInfoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="40dp"
        android:layout_gravity="center|top"
        android:layout_alignTop="@+id/recycler_view_ass"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#201F1F"
        android:visibility="gone"
        >

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:backgroundTint="#fff"
            android:padding="4dp"
            android:elevation="5dp"
            android:layout_margin="5dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="70dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Information"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="#252525"
                app:layout_constraintTop_toBottomOf="@id/tv0">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artists Performing"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_artists_rv"
                    android:id="@+id/recyclerview_artists"
                    android:orientation="vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv2"
                android:text="Band, (from Middle French bande, “troop”), in music, an ensemble of musicians playing chiefly woodwind, brass, and percussion instruments, "
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/conn1"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="@id/conn1"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:drawableStart="@drawable/ic_tick_done"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notes"
                android:text="Tickets are limited to 500 sales"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/t1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:drawableStart="@drawable/ic_tick_done"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notes1"
                android:text="Guest list is limited to 50"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/notes"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/t1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:drawableStart="@drawable/ic_tick_done"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notes2"
                android:text="Age 18+ only"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/notes1"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/t1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:drawableStart="@drawable/ic_tick_done"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notes3"
                android:text="No ID = No Entry"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/notes2"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/t1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:drawableStart="@drawable/ic_tick_done"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notes4"
                android:text="No Refunds"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/notes3"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/t1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:drawableStart="@drawable/ic_tick_done"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notes5"
                android:text="Masks must be worn"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/notes4"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/t1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more"
                android:text="@string/terms"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/notes5"
                android:textColor="@color/colorOrange"

                app:layout_constraintStart_toStartOf="parent"

                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/t1"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/colorDark"
                android:text="Drinks"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorOrange"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/t2"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/colorDark"
                android:text="Food"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorOrange"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/t1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/t3"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/colorDark"
                android:text="Gifts"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorOrange"
                app:layout_constraintTop_toBottomOf="@id/t2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="@color/colorOrange"
                android:text="Buy Tickets"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/t3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv2"
        app:layout_constraintVertical_bias="1"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:background="@drawable/bottom_nav_bg"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@drawable/icon_color"
        app:itemTextColor="@drawable/icon_color"
        app:labelVisibilityMode="unlabeled"
        />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        >
        <include layout="@layout/activity_bottom_sheet3"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>