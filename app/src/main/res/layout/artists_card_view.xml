<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/artists_view"
    android:layout_margin="5dp">

    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/blur_card_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/artist_photo"
        app:radius="24"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/artist_photo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_card_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@id/profile_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-light"
        android:text="Jubin Nautiyal"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/profile_photo"
        app:layout_constraintStart_toStartOf="@+id/calender_card_view"
        app:layout_constraintTop_toTopOf="@id/divider_card_view" />

    <ImageView
        android:id="@+id/calender_card_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_calendar_today_24"
        app:layout_constraintLeft_toRightOf="@+id/profile_photo"
        app:layout_constraintRight_toLeftOf="@id/ticket_card_view"
        app:layout_constraintTop_toBottomOf="@id/artist_name" />

    <ImageView
        android:id="@+id/ticket_card_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_payment_24"
        app:layout_constraintLeft_toRightOf="@+id/calender_card_view"
        app:layout_constraintRight_toLeftOf="@id/music_card_view"
        app:layout_constraintTop_toBottomOf="@id/artist_name" />

    <ImageView
        android:id="@+id/music_card_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_headset_24"
        app:layout_constraintLeft_toRightOf="@+id/ticket_card_view"
        app:layout_constraintRight_toLeftOf="@id/share_card_view"
        app:layout_constraintTop_toBottomOf="@id/artist_name" />

    <ImageView
        android:id="@+id/share_card_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintLeft_toRightOf="@+id/music_card_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist_name" />


</androidx.constraintlayout.widget.ConstraintLayout>