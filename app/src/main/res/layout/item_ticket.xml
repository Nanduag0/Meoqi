<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#17171A"
    android:layout_gravity="center_horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="1.5dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#FA7247"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/main_img_card"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/main_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/party_img_asset"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintTop_toBottomOf="@id/main_img_card"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Early bird ticket"
                android:id="@+id/ticket_title"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ticket_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/icons_cl"
                >
                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_burger"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/im2"
                    android:layout_margin="30dp"/>

                <TextView
                    android:id="@+id/food_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toTopOf="@+id/im1"
                    app:layout_constraintBottom_toBottomOf="@id/im1"
                    app:layout_constraintStart_toEndOf="@id/im1"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/im3"
                    app:layout_constraintBottom_toBottomOf="@id/im3"
                    app:layout_constraintEnd_toStartOf="@id/im3"
                    app:layout_constraintStart_toEndOf="@id/im2"
                    android:background="#fff"/>


                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_drink_2"
                    app:layout_constraintStart_toEndOf="@id/im1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/im3"
                    android:layout_margin="30dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/im2"
                    app:layout_constraintBottom_toBottomOf="@id/im2"
                    app:layout_constraintEnd_toStartOf="@id/im2"
                    app:layout_constraintStart_toEndOf="@id/im1"
                    android:background="#fff"/>

                <TextView
                    android:id="@+id/drinks_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toTopOf="@+id/im2"
                    app:layout_constraintBottom_toBottomOf="@id/im2"
                    app:layout_constraintStart_toEndOf="@id/im2"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_gift_box_2"
                    app:layout_constraintStart_toEndOf="@id/im2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="30dp"/>

                <TextView
                    android:id="@+id/gift_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toTopOf="@+id/im3"
                    app:layout_constraintBottom_toBottomOf="@id/im3"
                    app:layout_constraintStart_toEndOf="@id/im3"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/icons_cl"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-15dp"
                android:layout_marginEnd="-15dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintVertical_bias="0"
                android:background="@drawable/dashed"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cc1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="#17171A"
                    android:layout_alignParentStart="true"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cc2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="#17171A"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/seperator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_qr"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seperator"
                app:layout_constraintEnd_toStartOf="@id/qr_code"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="#fff"
                android:text="25th May 2020"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="#fff"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintEnd_toStartOf="@id/qr_code"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="#fff"
                android:text="Mumbai, India"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_location"
                app:drawableTint="#fff"
                android:drawablePadding="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>