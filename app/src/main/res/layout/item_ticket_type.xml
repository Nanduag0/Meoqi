<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Early Bird"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs1000"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/t11"
            app:layout_constraintStart_toStartOf="@id/t11"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tt4"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_drink_2"
                app:tint="#98918E"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tt3"
                />

            <TextView
                android:id="@+id/tt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:textSize="12sp"
                android:textColor="#6B6565"
                app:layout_constraintBottom_toBottomOf="@id/i1"
                app:layout_constraintStart_toEndOf="@id/i1"
                app:layout_constraintEnd_toStartOf="@id/i4"/>

            <ImageView
                android:id="@+id/i4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_gift_box_2"
                app:tint="#98918E"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tt1"
                app:layout_constraintStart_toEndOf="@id/tt3"

                />
            <TextView
                android:id="@+id/tt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:textSize="12sp"
                android:textColor="#6B6565"
                app:layout_constraintBottom_toBottomOf="@id/i1"
                app:layout_constraintEnd_toStartOf="@id/i3"
                app:layout_constraintStart_toEndOf="@id/i4"/>

            <ImageView
                android:id="@+id/i3"
                android:layout_margin="4dp"
                android:layout_width="15dp"
                android:layout_height="15dp"

                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_burger"
                app:layout_constraintStart_toEndOf="@id/tt1"
                app:layout_constraintEnd_toStartOf="@id/tt0"
                app:tint="#98918E"
                />

            <TextView
                android:id="@+id/tt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#6B6565"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@id/i1"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/i3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_24"
            android:background="@drawable/card_bg"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorOrange"
            app:layout_constraintTop_toTopOf="@id/u1"
            app:layout_constraintEnd_toStartOf="@id/u1"
            app:layout_constraintBottom_toBottomOf="@id/u1"
            app:tint="@color/colorBlack"/>

        <TextView
            android:id="@+id/u1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="10dp"
            android:textSize="60sp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/u1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t12"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/t12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/u1"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/u1"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/card_bg"
            android:backgroundTint="@color/colorOrange"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/colorBlack"/>

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/con12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>