<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="240dp"
    android:minHeight="300dp"
    android:backgroundTint="#252525"
    android:background="@drawable/card_bg"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:id="@+id/i1_card"
        >
        <ImageView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/event_image"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="25th May 2020 - 27 May"
        android:textColor="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@id/i1_card"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/i1_card"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tommorrowland"
        app:layout_constraintStart_toStartOf="@id/i1_card"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/date"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seoul, South Korea"
        android:textColor="#898484"
        android:textSize="10sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/t2"
        app:layout_constraintStart_toStartOf="@id/i1_card"
        app:drawableTint="#898484"
        android:gravity="center"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/ic_pin" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featuring"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/i1_card"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintStart_toStartOf="@id/i1_card"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:id="@+id/iv1_card"
        android:layout_marginStart="4dp"
        >
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/demo_profile_photo"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steven Steve"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@id/iv1_card"
        app:layout_constraintTop_toTopOf="@id/iv1_card"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/artist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@steves"
        android:textSize="12sp"
        android:textColor="#807D7D"
        app:layout_constraintStart_toEndOf="@id/iv1_card"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        android:layout_marginStart="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:layout_gravity="end"
        app:tint="@color/colorOrange"
        app:layout_constraintBottom_toBottomOf="@id/artist_id"
        app:layout_constraintTop_toTopOf="@id/artist_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>