<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="4dp"

        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/tick_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintBottom_toTopOf="@id/v3"

        app:layout_constraintEnd_toStartOf="@id/guest_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v2"
        app:tint="@color/colorWhite" />


    <ImageView
        android:id="@+id/guest_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_list_alt_24"
        app:layout_constraintBottom_toTopOf="@id/v3"

        app:layout_constraintEnd_toStartOf="@id/ticket_icon"
        app:layout_constraintStart_toEndOf="@id/tick_icon"
        app:layout_constraintTop_toTopOf="@id/v2"
        />


    <ImageView
        android:id="@+id/ticket_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"

        android:src="@drawable/ic_baseline_payment_24"
        app:layout_constraintBottom_toTopOf="@id/v3"

        app:layout_constraintEnd_toStartOf="@id/drinks_icon"
        app:layout_constraintStart_toEndOf="@id/guest_list"
        app:layout_constraintTop_toTopOf="@id/v2" />


    <ImageView
        android:id="@+id/drinks_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"

        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintBottom_toTopOf="@id/v3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ticket_icon"
        />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="4dp"

        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/time" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sat, 29 March at 8:00 - 9:00 PM"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/address"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian Institute of Technology\nIIT Campus,Hauz Khan\nNew Delhi"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/pin_logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/time"/>

    <ImageView
        android:id="@+id/pin_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_pin_drop_24"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_margin="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>