<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/i1_card"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_margin="2dp"
            >
            <ImageView
                android:id="@+id/i1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/demo_profile_photo"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        app:layout_constraintStart_toEndOf="@+id/i1_card"
        app:layout_constraintBottom_toTopOf="@id/t2"
        android:text="Cinthie rfdererer ere"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/i1_card"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/i1_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="01:00AM-3:00PM"
        android:textAlignment="viewStart"
        android:textSize="11sp"
        app:layout_constraintHorizontal_bias="0"
        android:textColor="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>